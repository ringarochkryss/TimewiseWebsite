@page
@model Salto.Pages.Tags.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="menugroup text-center">
    <div class="row">
        <div class="col-3 col-md-2 d-flex center">
            <a href="javascript:void(0);" onclick="goBack()"><span class=""><i class="fas fa-arrow-circle-left fa-3x aturq my-auto"></i></span></a>
        </div>
        <div class="col-6 col-md-8">
            <h1 class="swe">Redigera</h1>
            <h1 class="eng">Edit</h1>
            <h4 class="swe">Tagg</h4>
            <h4 class="eng">Tag</h4>
        </div>
        <div class="col-3 col-md-2 d-flex center">
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-6 mx-auto">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Tag.TagID" />
            <div class="form-group">
                <label asp-for="Tag.TagNameSWE" class="control-label"></label>
                <input asp-for="Tag.TagNameSWE" class="form-control" />
                <span asp-validation-for="Tag.TagNameSWE" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tag.TagNameENG" class="control-label"></label>
                <input asp-for="Tag.TagNameENG" class="form-control" />
                <span asp-validation-for="Tag.TagNameENG" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tag.IconClass" class="control-label"></label>
                <input asp-for="Tag.IconClass" class="form-control" />
                <span asp-validation-for="Tag.IconClass" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Tag.Archived" /> @Html.DisplayNameFor(model => model.Tag.Archived)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Spara" class="btn btn-lg btn-dark btn-block mx-auto mb-2 swe" />
                <input type="submit" value="Save" class="btn btn-lg btn-dark btn-block mx-auto mb-2 eng" />
            </div>
        </form>
        <a asp-page="./Index" class="btn btn-lg btn-dark mx-auto mb-2 text-light swe" style="max-width:150px; background-color:#394360;">Tillbaka</a>
        <a asp-page="./Index" class="btn btn-lg btn-dark mx-auto mb-2 eng" style="max-width:150px;">Back</a>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
