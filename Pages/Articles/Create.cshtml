@page
@model Salto.Pages.Articles.CreateModel

@{
    ViewData["Title"] = "Create Article";
}

<div class="text-center menugroup mx-0 mb-3">
    <div class="row">
        <div class="col-3 col-md-2 d-flex center">
            <a href="javascript:void(0);" onclick="goBack()"><span class=""><i class="fas fa-arrow-circle-left fa-3x aturq my-auto"></i></span></a>
        </div>
        <div class="col-6 col-md-8">
            <h1 class="swe">Skapa</h1>
            <h1 class="eng">Create</h1>
            <h4 class="swe">Artikel</h4>
            <h4 class="eng">Article</h4>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-6 mx-auto">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Article.ArticleTitleSWE" class="control-label"></label>
                <input asp-for="Article.ArticleTitleSWE" class="form-control" />
                <span asp-validation-for="Article.ArticleTitleSWE" class="text-danger"></span>
            </div>
            <div class="form-group mb-5">
                <label asp-for="Article.ArticleTitleENG" class="control-label"></label>
                <input asp-for="Article.ArticleTitleENG" class="form-control" />
                <span asp-validation-for="Article.ArticleTitleENG" class="text-danger"></span>
            </div>
            <div class="form-group my-5">
                <label asp-for="Article.Date" class="control-label"></label>
                <input asp-for="Article.Date" class="form-control" type="date" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="Article.Date" class="text-danger"></span>
            </div>
            <div class="form-group mt-5">
                <label asp-for="Article.ArticleContentSWE" class="control-label"></label>
                <input asp-for="Article.ArticleContentSWE" class="form-control" />
                <span asp-validation-for="Article.ArticleContentSWE" class="text-danger"></span>
            </div>
            <div class="form-group mb-5">
                <label asp-for="Article.ArticleContentENG" class="control-label"></label>
                <input asp-for="Article.ArticleContentENG" class="form-control" />
                <span asp-validation-for="Article.ArticleContentENG" class="text-danger"></span>
            </div>
            <div class="form-group my-5">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" type="file" class="form-control" />
            </div>
           @*  <div class="form-group my-5">
                <label asp-for="Article.ImageCaption" class="control-label"></label>
                <input asp-for="Article.ImageCaption" class="form-control" />
                <span asp-validation-for="Article.ImageCaption" class="text-danger"></span>
            </div>
            <div class="form-group my-5">
                <label asp-for="Article.ImageAltText" class="control-label"></label>
                <input asp-for="Article.ImageAltText" class="form-control" />
                <span asp-validation-for="Article.ImageAltText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Article.ImageDescription" class="control-label"></label>
                <textarea asp-for="Article.ImageDescription" class="form-control"></textarea>
                <span asp-validation-for="Article.ImageDescription" class="text-danger"></span>
            </div>
            <div class="form-group mb-5">
                <label asp-for="Article.ImageCredit" class="control-label"></label>
                <input asp-for="Article.ImageCredit" class="form-control" />
                <span asp-validation-for="Article.ImageCredit" class="text-danger"></span>
            </div> *@
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input checkbox-1x" asp-for="Article.Archived" /> @Html.DisplayNameFor(model => model.Article.Archived)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input checkbox-1x" asp-for="Article.Featured" /> @Html.DisplayNameFor(model => model.Article.Featured)
                </label>
            </div>
            <div class="form-group my-5">
                <label asp-for="Article.Tag" class="control-label"></label>
                <select asp-for="Article.TagID" class="form-control"
                        asp-items="@Model.TagNameSWE">
                    <option value="">-- Select Tag --</option>
                </select>
                <span asp-validation-for="Article.TagID" class="text-danger" />
            </div>
            <div class="form-group">
                <input type="submit" value="Spara" class="btn btn-lg btn-dark btn-block mx-auto mb-2 swe" />
                <input type="submit" value="Create" class="btn btn-lg btn-dark btn-block mx-auto mb-2 eng" />
            </div>
        </form>
        <a asp-page="./Index" class="btn btn-lg btn-dark mx-auto mb-2 text-light swe" style="max-width:150px; background-color:#394360;">Tillbaka</a>
        <a asp-page="./Index" class="btn btn-lg btn-dark mx-auto mb-2 eng" style="max-width:150px;">Back</a>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
